<div id="<%= dom_id lesson %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Topic:</strong>
    <%= lesson.topic %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Field:</strong>
    <%= lesson.field %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= lesson.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this lesson", lesson, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this lesson', edit_lesson_path(lesson),data: {turbo_frame: "model"} , class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium", onclick: "cllee()"  %>
    <hr class="mt-6">
  <% end %>
</div>